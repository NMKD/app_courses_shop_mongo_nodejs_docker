<h1>Список курсов</h1>
<div class="row">
    {{#if courses.length}}
    {{#each courses}}

    <div class="col s12 m6 l6 black-text">
        <div class="card hoverable">
            <div class="card-image">
                <img src="{{img}}" alt="{{title}}">
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action flex black">
                <div>
                    <p class="align-center">
                        <a class="blue-text yellow-text text-darken-1" href="/courses/{{id}}"
                            target="_blank">Подробнее</a>
                        {{#if @root.isAuth}}
                        {{#if @root.isAdmin}}
                        <a class="blue-text text-darken-1" href="/courses/{{id}}/edit?allow=true">Редактировать</a>
                        {{/if}}

                        {{/if}}
                    </p>
                </div>
                {{#if @root.isAuth}}
                <form action="/card/add" method="post">
                    <input type="hidden" name="id" value={{id}}>
                    <button type="submit" class="btn amber darken-4">Купить</button>
                </form>
                {{/if}}
            </div>
        </div>
    </div>

    {{/each}}
    {{else}}
    <p>Курсов пока нет</p>
    {{/if}}
</div>