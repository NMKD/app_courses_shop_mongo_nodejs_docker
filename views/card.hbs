<h1>Корзина</h1>

<div id="card">
    {{#if courses.length}}
    <table class="striped centered">
        <thead class="black">
            <tr>
                <th>Название</th>
                <th>Кол-во</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody class="grey lighten-5 black-text">
            {{#each courses}}


            <tr>
                <td>{{title}}</td>
                <td id="count">{{count}}</td>
                <td class="price total-table__price">{{price}}</td>
                <td>
                    <button type="submit"
                        class="btn-floating btn-small waves-effect waves-light red js-remove material-icons"
                        data-id="{{id}}" data-csrf="{{@root.csrf}}">remove</button>
                </td>
            </tr>


            {{/each}}
        </tbody>
    </table>
    <div class="total">
        <div>
            <strong>
                Сумма заказа:
            </strong>
            <div class="price total-table__price" id="total-price">{{total}}</div>
        </div>
        <form action="/orders" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn amber darken-4">Заказать</button>
        </form>
    </div>

    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>